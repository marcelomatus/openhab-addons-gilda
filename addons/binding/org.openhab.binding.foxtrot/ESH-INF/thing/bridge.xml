<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="foxtrot" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
		xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Foxtrot PLC Bridge -->
	<bridge-type id="plccoms">
		<label>Foxtrot PLCComS server</label>
		<description>This bridge represents the gateway to PLCComS communication server.</description>

		<properties>
			<property name="vendor">Tecomat, a.s.</property>
			<property name="plccomsHost">unknown</property>
			<property name="plccomsPort">unknown</property>
			<property name="plccomsVersion">unknown</property>
			<property name="plccomsEpsnetVersion">unknown</property>
			<property name="plccomsIniVersion">unknown</property>
			<property name="plcVersion">unknown</property>
			<property name="plcIp">unknown</property>
		</properties>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<label>Hostname or IP</label>
				<description>Hostname or IP of the PLCComS</description>
			</parameter>
			<parameter name="port" type="integer" required="false" min="0">
				<label>Port</label>
				<description>Communication port of the PLCComS</description>
				<default>5010</default>
			</parameter>
		</config-description>
	</bridge-type>

</thing:thing-descriptions>
