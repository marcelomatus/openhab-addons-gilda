<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="foxtrot" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
		xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="bool">
		<supported-bridge-type-refs>
			<bridge-type-ref id="plccoms"/>
		</supported-bridge-type-refs>

		<label>Bool variable</label>
		<description>Published Foxtrot PLC's public bool variable</description>

		<channels>
			<channel typeId="bool-channel" id="bool"/>
		</channels>

		<config-description>
			<parameter name="var" type="text" required="true">
				<label>Bool variable</label>
				<description>Variable name defined in PLC's program PUB file</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="bool-channel">
		<item-type>Switch</item-type>
		<label>Bool</label>
		<description>Logical representation of Foxtrot BOOL variable</description>
	</channel-type>
</thing:thing-descriptions>
