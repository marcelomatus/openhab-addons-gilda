            <channel id="setstatus" typeId="setstatus"/>
            
        </channels>

        <properties>
            <property name="vendor">Verisure</property>
        </properties>

  
    </thing-type>

    <thing-type id="lock">
        <supported-bridge-type-refs>
            <bridge-type-ref id="bridge" />
        </supported-bridge-type-refs>

        <label>Yaleman Lock</label>
        <description>A door lock</description>

       <channels>
            <channel id="status" typeId="status"/>
