    </thing-type>
    
     <channel-type id="status">
        <item-type>String</item-type>
        <label>Current Status</label>
        <description>Current  Status Channel</description>
    </channel-type>
    <channel-type id="webAccount">
        <item-type>String</item-type>
        <label>UserEmail</label>
        <description>The users email</description>
    </channel-type>
    <channel-type id="locationStatus">
        <item-type>String</item-type>
        <label>Location Status</label>
        <description>Location  Status Channel</description>
    </channel-type>
    <channel-type id="locationName">
        <item-type>String</item-type>
        <label>Location Name</label>
        <description>Location Name Channel</description>
    </channel-type>
    <channel-type id="statusnumeric">
        <item-type>Number</item-type>
        <label>Current Status Numeric</label>
        <description>Current Status Numeric Channel</description>
    </channel-type>
    
         <channel-type id="alarmstatuslocalized">
        <item-type>String</item-type>
        <label>Current Alarm Status - Localized</label>
        <description>Current Alarm Status Localized Channel</description>
    </channel-type>
    
         <channel-type id="timestamp">
        <item-type>String</item-type>
        <label>Time changed</label>
        <description>Status Change Timestamp Channel</description>
    </channel-type>
    
     <channel-type id="changername">
        <item-type>String</item-type>
        <label>Operated By</label>
        <description>Operated By Channel</description>
    </channel-type>
    
    
    
    <channel-type id="setstatus">
        <item-type>Number</item-type>
        <label>set status</label>
        <description>sets the status..</description>
        <state>
            <options>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>

            </options>
        </state>
    </channel-type>
    
    <channel-type id="state">
        <item-type>String</item-type>
        <label>State of Door or Window</label>
        <description>Is door open or closed</description>
        <state readOnly="true" >
            <options>
                <option value="OPEN">OPEN</option>
                <option value="CLOSED">CLOSED</option>                

            </options>
        </state>
    </channel-type>
    
      <channel-type id="temperature">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Current temperature in degrees celsius</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f Â°C">
        </state>
    </channel-type>
    
    <channel-type id="humidity">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>Current humidity in %</description>
        <category>Humidity</category>
        <state readOnly="true" min="0" max="100" pattern="%d %%">
        </state>
    </channel-type>
    
    <channel-type id="lastupdate">
        <item-type>String</item-type>
        <label>lastupdate</label>
        <description>Last timestmap</description>
        <state readOnly="true">
        </state>
    </channel-type>
    
    <channel-type id="label">
        <item-type>String</item-type>
        <label>Label</label>
        <description>The label of the door/window</description>
        <state readOnly="true">
        </state>
    </channel-type>
    
    <channel-type id="location">
        <item-type>String</item-type>
        <label>location</label>
        <description>location</description>
        <state readOnly="true">
        </state>
    </channel-type>
    <channel-type id="isHome">
        <item-type>Switch</item-type>
        <label>ishome</label>
        <description>Is user home</description>
        <state readOnly="true">
        </state>
    </channel-type>
</thing:thing-descriptions>
