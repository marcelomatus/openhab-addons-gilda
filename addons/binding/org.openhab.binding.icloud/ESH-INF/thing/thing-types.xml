<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="icloud" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
	<bridge-type id="account">
		<label>iCloud Account</label>
		<description>Provides various information for iCloud devices registered with this account.</description>

		<channels>
			<channel id="owner" typeId="Owner" />
			<channel id="numberOfDevices" typeId="NumberOfDevices" />
			<channel id="refresh" typeId="Refresh" />
		</channels>

		<config-description>
			<parameter name="appleId" type="text" required="true">
				<context>email</context>
				<label>Apple Id</label>
				<description>Apple Id (e-mail) to access iCloud information.</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Apple iCloud password for the given Id.</description>
			</parameter>
			<parameter name="refreshTimeInMinutes" type="integer" min="5" max="65535" unit="min">
				<label>Refresh</label>
				<description>Refresh time in minutes.</description>
				<default>5</default>
			</parameter>
			<parameter name="googleAPIKey" type="text">
				<label>Google API Key</label>
				<description>Google API key to be used for address lookup calls (to translate coordinates into a human readable string). Without a key the number of daily request are limited and the bindings address lookup functionality will stop working.</description>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="device">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>

		<label>iCloud Device</label>

		<channels>
			<channel typeId="BatteryStatus" id="batteryStatus" />
			<channel typeId="system.battery-level" id="batteryLevel" />
			<channel typeId="FindMyPhone" id="findMyPhone" />
			<channel typeId="Location" id="location" />
			<channel typeId="LocationAccuracy" id="locationAccuracy" />
			<channel typeId="LocationLastUpdate" id="locationLastUpdate" />
			<channel typeId="DistanceFromHome" id="distanceFromHome" />
			<channel typeId="AddressStreet" id="addressStreet" />
			<channel typeId="AddressCity" id="addressCity" />
			<channel typeId="AddressCountry" id="addressCountry" />
			<channel typeId="FormattedAddress" id="formattedAddress" />
			<channel typeId="DeviceName" id="deviceName" />
		</channels>

		<representation-property>deviceId</representation-property>

		<config-description>
			<parameter name="deviceId" type="text" required="true">
				<label>Device id</label>
			</parameter>
		</config-description>

	</thing-type>

	<channel-type id="NumberOfDevices">
		<item-type>Number</item-type>
		<label>Number of devices</label>
		<description>Number of registered devices with this iCloud account.</description>
	</channel-type>
	<channel-type id="Owner">
		<item-type>String</item-type>
		<label>Owner</label>
		<description>Registered owner of this iCloud account.</description>
	</channel-type>
	<channel-type id="Refresh">
		<item-type>Switch</item-type>
		<label>Refresh</label>
		<description>Update all devices registered with this account immediately.</description>
	</channel-type>
	<channel-type id="EnableAddressLookup">
		<item-type>Switch</item-type>
		<label>Enable address lookup</label>
		<description>Enable address lookup. The coordinates are send to google to lookup a
	    human readable address.</description>
	</channel-type>
	<channel-type id="BatteryStatus">
		<item-type>String</item-type>
		<label>Battery Status</label>
	</channel-type>
	<channel-type id="FindMyPhone">
		<item-type>Switch</item-type>
		<label>Find my phone</label>
	</channel-type>
	<channel-type id="Location">
		<item-type>Location</item-type>
		<label>Location</label>
	</channel-type>
	<channel-type id="LocationAccuracy">
		<item-type>Number</item-type>
		<label>Location accuracy</label>
		<state readOnly="true" pattern="%d m" />
	</channel-type>
	<channel-type id="DistanceFromHome">
		<item-type>Number</item-type>
		<label>Distance from home</label>
		<state readOnly="true" pattern="%d m" />
	</channel-type>
	<channel-type id="LocationLastUpdate">
		<item-type>DateTime</item-type>
		<label>Last location update</label>
	</channel-type>
	<channel-type id="AddressStreet">
		<item-type>String</item-type>
		<label>Street</label>
	</channel-type>
	<channel-type id="AddressCity">
		<item-type>String</item-type>
		<label>City</label>
	</channel-type>
	<channel-type id="AddressCountry">
		<item-type>String</item-type>
		<label>Country</label>
	</channel-type>
	<channel-type id="FormattedAddress">
		<item-type>String</item-type>
		<label>Formatted address</label>
	</channel-type>
	<channel-type id="DeviceName">
		<item-type>String</item-type>
		<label>Device name</label>
	</channel-type>
</thing:thing-descriptions>
 