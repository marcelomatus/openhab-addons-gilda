<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="feed" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- DEFINITIONS: 
	    Feed is a document used for providing users with frequently updated content. It is localized with URL. 
		Entry is a single item in the Feed, that contains reference to content, description and other information. -->

	<!-- Feed Thing Type -->
	<thing-type id="feed">
		<label>Feed</label>
		<description>Provides the content of the Feed in XML format.</description>

		<channels>
			<channel id="feed-channel" typeId="feed-channel" />
		</channels>

		<config-description>
			<parameter name="URL" type="text" required="true">
				<label>Feed URL</label>
				<description>Feed URL used to localize the Feed.</description>
			</parameter>
			
			<!--After the refresh time interval expires, the bindings checks for updates in the Feed -->
			
			<parameter name="refresh" type="integer">
				<label>Refresh time interval</label>
				<description>Refresh time interval in minutes.</description>
				<default>20</default>
			</parameter>
			
			<!-- Feeds are converted to one of the following formats. Comparison between the two most popular formats - RSS 2.0 and 
				Atom 1.0 can be found here- http://www.intertwingly.net/wiki/pie/Rss20AndAtom10Compared -->
			
			<parameter name="format" type="text">
				<label>Output format</label>
				<description>The output format of the Feed.</description>
				<default>"atom_1.0"</default>
				<options>
					<option value="rss_0.9">RSS 0.9</option>
					<option value="rss_0.91">RSS 0.91</option>
					<option value="rss_0.92">RSS 0.92</option>
					<option value="rss_0.93">RSS 0.93</option>
					<option value="rss_0.94">RSS 0.94</option>
					<option value="rss_1.0">RSS 1.0</option>
					<option value="rss_2.0">RSS 2.0</option>
					<option value="atom_0.3">Atom 0.3</option>
					<option value="atom_1.0">Atom 1.0</option>
				</options>
			</parameter>
			
			<!-- The user is able to configure the number of entries, that he is going to receive, through this parameter. -->
			
			<parameter name="length" type="integer">
				<label>Number of Entries</label>
				<description>Number of Feed Entries stored</description>
				<default>20</default>
			</parameter>
		</config-description>
	</thing-type>


	<channel-type id="feed-channel">
		<item-type>String</item-type>
		<label>Feed channel</label>
		<description>Contains meta data about the Feed and Feed Entries.</description>
	</channel-type>


</thing:thing-descriptions>
