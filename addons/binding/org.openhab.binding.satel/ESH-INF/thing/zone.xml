<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="satel" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="zone">

		<supported-bridge-type-refs>
			<bridge-type-ref id="ethm-1" />
			<bridge-type-ref id="int-rs" />
		</supported-bridge-type-refs>

		<label>@text/zone.label</label>
		<description>@text/zone.description</description>

		<channels>
			<channel typeId="state_ro" id="violation">
				<label>@text/zone.violation.label</label>
				<description>@text/zone.violation.description</description>
			</channel>
			<channel typeId="state_ro" id="tamper">
				<label>@text/zone.tamper.label</label>
				<description>@text/zone.tamper.description</description>
			</channel>
			<channel typeId="state_ro" id="alarm">
				<label>@text/zone.alarm.label</label>
				<description>@text/zone.alarm.description</description>
			</channel>
			<channel typeId="state_ro" id="tamper_alarm">
				<label>@text/zone.tamper_alarm.label</label>
				<description>@text/zone.tamper_alarm.description</description>
			</channel>
			<channel typeId="state_ro" id="alarm_memory">
				<label>@text/zone.alarm_memory.label</label>
				<description>@text/zone.alarm_memory.description</description>
			</channel>
			<channel typeId="state_ro" id="tamper_alarm_memory">
				<label>@text/zone.tamper_alarm_memory.label</label>
				<description>@text/zone.tamper_alarm_memory.description</description>
			</channel>
			<channel typeId="state" id="bypass">
				<label>@text/zone.bypass.label</label>
				<description>@text/zone.bypass.description</description>
			</channel>
			<channel typeId="state_adv_ro" id="no_violation_trouble">
				<label>@text/zone.no_violation_trouble.label</label>
				<description>@text/zone.no_violation_trouble.description</description>
			</channel>
			<channel typeId="state_adv_ro" id="long_violation_trouble">
				<label>@text/zone.long_violation_trouble.label</label>
				<description>@text/zone.long_violation_trouble.description</description>
			</channel>
			<channel typeId="state_adv" id="isolate">
				<label>@text/zone.isolate.label</label>
				<description>@text/zone.isolate.description</description>
			</channel>
			<channel typeId="state_adv_ro" id="masked">
				<label>@text/zone.masked.label</label>
				<description>@text/zone.masked.description</description>
			</channel>
			<channel typeId="state_adv_ro" id="masked_memory">
				<label>@text/zone.masked_memory.label</label>
				<description>@text/zone.masked_memory.description</description>
			</channel>
		</channels>

		<config-description>
			<parameter name="id" type="integer" min="1" max="256" required="true">
				<label>@text/zone.id.label</label>
				<description>@text/zone.id.description</description>
			</parameter>
			<parameter name="invertState" type="boolean" required="false">
				<label>@text/zone.invertState.label</label>
				<description>@text/zone.invertState.description</description>
			</parameter>
		</config-description>

	</thing-type>

</thing:thing-descriptions>
