<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="satel" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="ethm-1">
		<label>@text/ethm1.label</label>
		<description>@text/ethm1.description</description>

		<config-description>
			<parameter name="host" type="text" required="true">
				<label>@text/ethm1.host.label</label>
				<description>@text/ethm1.host.description</description>
			</parameter>
			<parameter name="port" type="integer" min="1" max="65335">
				<label>@text/ethm1.port.label</label>
				<description>@text/ethm1.port.description</description>
				<default>7094</default>
			</parameter>
			<parameter name="timeout" type="integer">
				<label>@text/ethm1.timeout.label</label>
				<description>@text/ethm1.timeout.description</description>
				<default>5000</default>
			</parameter>
			<parameter name="refresh" type="integer">
				<label>@text/ethm1.refresh.label</label>
				<description>@text/ethm1.refresh.description</description>
				<default>5000</default>
			</parameter>
			<parameter name="userCode" type="text" pattern="[0-9]{4,8}">
				<label>@text/ethm1.userCode.label</label>
				<description>@text/ethm1.userCode.description</description>
			</parameter>
			<parameter name="encryptionKey" type="text">
				<label>@text/ethm1.encryptionKey.label</label>
				<description>@text/ethm1.encryptionKey.description</description>
			</parameter>
			<parameter name="encoding" type="text">
				<label>@text/ethm1.encoding.label</label>
				<description>@text/ethm1.encoding.description</description>
				<default>windows-1250</default>
			</parameter>
		</config-description>
	</bridge-type>

</thing:thing-descriptions>
