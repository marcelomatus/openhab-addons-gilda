	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<channel-type id="state">
		<item-type>Switch</item-type>
		<label>State</label>
		<category>Alarm</category>
	</channel-type>

	<channel-type id="state_ro">
		<item-type>Switch</item-type>
		<label>Read-only state</label>
		<category>Alarm</category>
		<state readOnly="true" />
	</channel-type>

	<channel-type id="state_adv" advanced="true">
		<item-type>Switch</item-type>
		<label>Advanced state</label>
		<category>Alarm</category>
	</channel-type>

	<channel-type id="state_adv_ro" advanced="true">
		<item-type>Switch</item-type>
		<label>Advanced, read-only state</label>
		<category>Alarm</category>
		<state readOnly="true" />
	</channel-type>

</thing:thing-descriptions>
