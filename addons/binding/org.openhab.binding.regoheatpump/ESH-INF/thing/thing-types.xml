<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="regoheatpump"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Manage Rego based Heat Pump over IP -->
    <thing-type id="ipRego6xx">
        <label>Rego based heat pump over TCP/IP</label>
        <description>Manage Rego based heat pump over TCP/IP</description>
        
        <channel-groups>
            <channel-group id="sensors" typeId="sensors" />
            <channel-group id="registers" typeId="registers" />
            <channel-group id="frontPanel" typeId="frontPanel" />
            <channel-group id="status" typeId="status" />
        </channel-groups>

        <config-description>
            <parameter name="address" type="text" required="true">
                <context>network-address</context>
                <label>Address</label>
                <description>The IP address of the Rego to control.</description>
            </parameter>
            <parameter name="port" type="integer" max="65535" min="1" required="true">
                <default>9265</default>
                <label>TCP Port</label>
                <description>The TCP port number used to connect to the Rego controller.</description>
            </parameter>
            <parameter name="refreshInterval" type="integer" max="65535" min="10" required="true">
                <default>60</default>
                <label>Refresh interval</label>
                <description>Refresh interval in seconds.</description>
            </parameter>
        </config-description>        
    </thing-type>
    
    <channel-group-type id="sensors">
        <label>Sensors</label>
        <channels>
            <channel id="radiatorReturn" typeId="radiatorReturnTemp"/>
            <channel id="outdoor" typeId="outdoorTemp"/>
            <channel id="hotWater" typeId="hotWaterTemp"/>
            <channel id="radiatorForward" typeId="radiatorForwardTemp"/>
            <channel id="indoor" typeId="indoorTemp"/>
            <channel id="compressor" typeId="compressorTemp"/>
            <channel id="heatFluidOut" typeId="heatFluidOutTemp"/>
            <channel id="heatFluidIn" typeId="heatFluidInTemp"/>
            <channel id="coldFluidIn" typeId="coldFluidInTemp"/>
            <channel id="coldFluidOut" typeId="coldFluidOutTemp"/>
            <channel id="externalHotWater" typeId="externalHotWaterTemp"/>
        </channels>
    </channel-group-type>
    
    <channel-group-type id="registers">
        <label>Register Values</label>
        <channels>
            <!-- Control data -->
            <channel id="targetValueGT1" typeId="temperature"/>
            <channel id="onValueGT1" typeId="temperature"/>
            <channel id="offValueGT1" typeId="temperature"/>
            <channel id="targetValueGT3" typeId="temperature"/>
            <channel id="onValueGT3" typeId="temperature"/>
            <channel id="offValueGT3" typeId="temperature"/>
            <channel id="targetValueGT4" typeId="temperature"/>
            <channel id="addHeatPower" typeId="temperature"/>
            <!-- Device values -->
            <channel id="coldFluidPumpP3" typeId="shortValue"/>
            <channel id="compressor" typeId="shortValue"/>
            <channel id="additionalHeat3kW" typeId="shortValue"/>
            <channel id="additionalHeat6kW" typeId="shortValue"/>
            <channel id="radiatorPumpP1" typeId="shortValue"/>
            <channel id="heatFluidPumpP2" typeId="shortValue"/>
            <channel id="threeWayValve" typeId="shortValue"/>
            <channel id="alarm" typeId="shortValue"/>
            <!-- Settings -->
            <channel id="heatCurve" typeId="temperature"/>
            <channel id="heatCurveFineAdj" typeId="temperature"/>
            <channel id="indoorTempSetting" typeId="temperature"/>
            <channel id="curveInflByInTemp" typeId="temperature"/>
            <channel id="adjCurveAt20" typeId="temperature"/>
            <channel id="adjCurveAt15" typeId="temperature"/>
            <channel id="adjCurveAt10" typeId="temperature"/>
            <channel id="adjCurveAt5" typeId="temperature"/>
            <channel id="adjCurveAt0" typeId="temperature"/>
            <channel id="adjCurveAtMinus5" typeId="temperature"/>
            <channel id="adjCurveAtMinus10" typeId="temperature"/>
            <channel id="adjCurveAtMinus15" typeId="temperature"/>
            <channel id="adjCurveAtMinus20" typeId="temperature"/>
            <channel id="adjCurveAtMinus25" typeId="temperature"/>
            <channel id="adjCurveAtMinus30" typeId="temperature"/>
            <channel id="adjCurveAtMinus35" typeId="temperature"/>
            <channel id="heatCurveCouplingDiff" typeId="temperature"/>
        </channels>
    </channel-group-type>

    <channel-group-type id="status">
        <label>Status</label>
        <channels>
            <channel id="lastErrorTimestamp" typeId="lastErrorTimestamp"/>
            <channel id="lastErrorCode" typeId="lastErrorCode"/>
        </channels>
    </channel-group-type>

    <channel-group-type id="frontPanel">
        <label>Front Panel</label>
        <channels>
            <channel id="powerLed" typeId="powerLed"/>
            <channel id="heatPumpLed" typeId="heatPumpLed"/>
            <channel id="additionalHeatingLed" typeId="additionalHeatingLed"/>
            <channel id="hotWaterLed" typeId="hotWaterLed"/>
            <channel id="alarmLed" typeId="alarmLed"/>
        </channels>
    </channel-group-type>

    <channel-type id="temperature" advanced="true">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Temperature value in degrees celsius</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>

    <channel-type id="radiatorReturnTemp">
        <item-type>Number</item-type>
        <label>Radiator return</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="outdoorTemp">
        <item-type>Number</item-type>
        <label>Outdoor</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="hotWaterTemp">
        <item-type>Number</item-type>
        <label>Hot water</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>

    <channel-type id="radiatorForwardTemp" advanced="true">
        <item-type>Number</item-type>
        <label>Radiator forward</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>

    <channel-type id="indoorTemp" advanced="true">
        <item-type>Number</item-type>
        <label>Indoor</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="compressorTemp">
        <item-type>Number</item-type>
        <label>Compressor</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="heatFluidOutTemp">
        <item-type>Number</item-type>
        <label>Heat fluid out</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="heatFluidInTemp">
        <item-type>Number</item-type>
        <label>Heat fluid in</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="coldFluidInTemp">
        <item-type>Number</item-type>
        <label>Cold fluid in</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>
    
    <channel-type id="coldFluidOutTemp">
        <item-type>Number</item-type>
        <label>Cold fluid out</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>

    <channel-type id="externalHotWaterTemp" advanced="true">
        <item-type>Number</item-type>
        <label>External hot water</label>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f °C"/>
    </channel-type>

    <channel-type id="shortValue" advanced="true">
        <item-type>Number</item-type>
        <label>Numeric value</label>
        <description>16 bit numeric value</description>
        <state readOnly="true" pattern="%s"/>
    </channel-type>

    <channel-type id="lastErrorCode">
        <item-type>String</item-type>
        <label>Last error code</label>
        <description>Information about the error that happened</description>
        <state readOnly="true" pattern="%s">
            <options>
                <option value="0">Sensor radiator return (GT1)</option>
                <option value="1">Outdoor sensor (GT2)</option>
                <option value="2">Sensor hot water (GT3)</option>
                <option value="3">Mixing valve sensor (GT4)</option>
                <option value="4">Room sensor (GT5)</option>
                <option value="5">Sensor compressor (GT6)</option>
                <option value="6">Sensor heat transfer fluid out (GT8)</option>
                <option value="7">Sensor heat transfer fluid in (GT9)</option>
                <option value="8">Sensor cold transfer fluid in (GT10)</option>
                <option value="9">Sensor cold transfer fluid in (GT11)</option>
                <option value="10">Compressor circuit switch</option>
                <option value="11">Electrical cassette</option>
                <option value="12">HTF C=pump switch (MB2)</option>
                <option value="13">Low pressure switch (LP)</option>
                <option value="14">High pressure switch (HP)</option>
                <option value="15">High return HP (GT9)</option>
                <option value="16">HTF out max (GT8)</option>
                <option value="17">HTF in under limit (GT10)</option>
                <option value="18">HTF out under limit (GT11)</option>
                <option value="19">Compressor superheat (GT6)</option>
                <option value="20">Three phase incorrect order</option>
                <option value="21">Power failure</option>
                <option value="22">High delta GT8/GT9</option>
            </options>
        </state>
    </channel-type>
    
    <channel-type id="lastErrorTimestamp">
        <item-type>DateTime</item-type>
        <label>Last error timestamp</label>
        <description>Date and time of the last error</description>
        <state readOnly="true" pattern="%tc"/>
    </channel-type>

    <channel-type id="powerLed" advanced="true">
        <item-type>Switch</item-type>
        <label>Power led</label>
        <state readOnly="true" pattern="%s"/>
    </channel-type>
    
    <channel-type id="heatPumpLed">
        <item-type>Switch</item-type>
        <label>Heat pump led</label>
        <state readOnly="true" pattern="%s"/>
    </channel-type>

    <channel-type id="additionalHeatingLed">
        <item-type>Switch</item-type>
        <label>Additional heating led</label>
        <state readOnly="true" pattern="%s"/>
    </channel-type>
    
    <channel-type id="hotWaterLed">
        <item-type>Switch</item-type>
        <label>Hot water led</label>
        <state readOnly="true" pattern="%s"/>
    </channel-type>
    
    <channel-type id="alarmLed">
        <item-type>Switch</item-type>
        <label>Alarm led</label>
        <state readOnly="true" pattern="%s"/>
    </channel-type>

</thing:thing-descriptions>
