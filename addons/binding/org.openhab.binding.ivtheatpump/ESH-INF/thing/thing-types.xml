<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ivtheatpump"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Manage IVT Heat Pump over IP -->
    <thing-type id="ipRego6xx">
        <label>IVTHeatPump over IP</label>
        <description>Manage IVT Heat Pump over IP</description>
        
        <channel-groups>
            <channel-group id="registers" typeId="registers" />
            <channel-group id="status" typeId="status" />
        </channel-groups>

        <config-description>
            <parameter name="address" type="text" required="true">
                <context>network-address</context>
                <label>Address</label>
                <description>The address of the Rego to control.</description>
            </parameter>
            <parameter name="port" type="integer" max="65535" min="1" required="true">
                <default>9265</default>
                <label>TCP Port</label>
                <description>The TCP port number used to connect to the Rego.</description>
            </parameter>
            <parameter name="refreshInterval" type="integer" max="65535" min="1" required="true">
                <default>60</default>
                <label>Refresh interval</label>
                <description>Refresh interval in seconds.</description>
            </parameter>
        </config-description>        
    </thing-type>

    <channel-group-type id="registers">
        <label>Register Values</label>
        <channels>
            <channel id="radiatorReturnGT1" typeId="radiatorReturnGT1"/>
            <channel id="outdoorGT2" typeId="outdoorGT2"/>
            <channel id="hotWaterGT3" typeId="hotWaterGT3"/>
            <channel id="shuntGT4" typeId="shuntGT4"/>
            <channel id="roomGT5" typeId="roomGT5"/>
            <channel id="compressorGT6" typeId="compressorGT6"/>
            <channel id="heatFluidOutGT8" typeId="heatFluidOutGT8"/>
            <channel id="heatFluidInGT9" typeId="heatFluidInGT9"/>
            <channel id="coldFluidInGT10" typeId="coldFluidInGT10"/>
            <channel id="coldFluidOutGT11" typeId="coldFluidOutGT11"/>
            <channel id="externalHotWaterGT3x" typeId="externalHotWaterGT3x"/>            
        </channels>
    </channel-group-type>

    <channel-group-type id="status">
        <label>Sensor Values</label>
        <channels>
            <channel id="lastError" typeId="lastError"/>
        </channels>
    </channel-group-type>

    <channel-type id="radiatorReturnGT1">
