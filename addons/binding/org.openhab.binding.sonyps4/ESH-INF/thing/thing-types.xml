<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="sonyps4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="SonyPS4">
		<label>PlayStation 4</label>
		<description>Sony PlayStation 4 console.</description>

		<channels>
			<channel id="power" typeId="power-channel" />
            <channel id="applicationName" typeId="application-channel" />
            <channel id="applicationTitleid" typeId="applicationId-channel" />
            <channel id="applicationImage" typeId="applicationImage-channel" />
		</channels>

		<properties>
			<property name="vendor">Sony</property>
			<property name="modelId">PlayStation 4</property>
		</properties>
		<representation-property>deviceId</representation-property>

		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<context>network-address</context>
				<label>IP address</label>
				<description>The local IP address or hostname of the PlayStation 4.</description>
			</parameter>
            <parameter name="ipPort" type="integer">
                <label>IP port</label>
                <description>The TCP port used to communicate with the PlayStation 4.</description>
                <default>997</default>
                <advanced>true</advanced>
            </parameter>
            <parameter name="userCredential" type="text" required="true">
                <label>User credential</label>
                <description>User credential to communicate with the PlayStation 4, 64 hex characters.</description>
            </parameter>
            <parameter name="pinCode" type="text">
                <label>Pin code</label>
                <description>Pin code to log in to PlayStation 4, optional, 4 numbers.</description>
            </parameter>
		</config-description>

	</thing-type>

	<channel-type id="power-channel">
		<item-type>Switch</item-type>
		<label>PS4 Power</label>
		<description>Power channel for SonyPS4 Binding.</description>
	</channel-type>
	<channel-type id="application-channel">
		<item-type>String</item-type>
		<label>Application</label>
		<description>Application channel for SonyPS4 Binding.</description>
		<state pattern="%s" readOnly="true" />
	</channel-type>
    <channel-type id="applicationId-channel">
        <item-type>String</item-type>
        <label>Application ID</label>
        <description>Application ID channel for SonyPS4 Binding.</description>
        <state>
            <options>
                <option value="CUSA00127">Netflix</option>
                <option value="CUSA01116">Youtube</option>
                <option value="CUSA11993">Marvel's Spider-Man</option>
                <option value="CUSA00342">Other game</option>
            </options>
        </state>
    </channel-type>
    <channel-type id="applicationImage-channel">
        <item-type>Image</item-type>
        <label>Artwork</label>
        <description>Application artwork channel for SonyPS4 Binding.</description>
        <state readOnly="true" />
    </channel-type>

</thing:thing-descriptions>
