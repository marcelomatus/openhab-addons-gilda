<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="smappee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="smappee-thing">
        <label>Smappee Monitor</label>
        <description>Smappee Monitor Thing</description>

        <channels>
            <channel id="channelconsumption" typeId="smappee-consumption-channel"/>
            <channel id="channelsolar" typeId="smappee-solar-channel"/>
            <channel id="channelalwayson" typeId="smappee-alwayson-channel"/>
        </channels>

        <config-description>
            <parameter name="client_id" type="text" required="true">
                <label>Client Id</label>
                <description>The Smappee Api Oauth client id (obtain by mail from smappee support)</description>
                <advanced>false</advanced>
                <required>true</required>
            </parameter>

            <parameter name="client_secret" type="text" required="true">
                <label>Client Secret</label>
                <description>The Smappee Api Oauth client secret (obtain by mail from smappee support)</description>
                <advanced>false</advanced>
                <required>true</required>
            </parameter>

            <parameter name="username" type="text" required="true">
                <label>Username</label>
                <description>The username of your Smappee</description>
                <advanced>false</advanced>
                <required>true</required>
            </parameter>

            <parameter name="password" type="text" required="true">
                <label>Password</label>
                <description>The password of your Smappee</description>
                <context>password</context>
                <advanced>false</advanced>
                <required>true</required>
            </parameter>
            
            <parameter name="servicelocationname" type="text" required="true">
                <label>Service location name</label>
                <description>The name of your Smappee installation</description>
                <advanced>false</advanced>
                <required>true</required>
            </parameter>

        </config-description>        
        
    </thing-type>

    <channel-type id="smappee-consumption-channel">
        <item-type>Number</item-type>
        <label>Smappee Energy Consumption Channel</label>
        <description>The amount of energy that is being consumed</description>
    </channel-type>
    
    <channel-type id="smappee-solar-channel">
        <item-type>Number</item-type>
        <label>Smappee Solar Energy Channel</label>
        <description>The amount of energy that is being generated by your solar power panels</description>
    </channel-type>
        
    <channel-type id="smappee-alwayson-channel">
        <item-type>Number</item-type>
        <label>Smappee AlwaysOn Channel</label>
        <description>The amount of energy that is always consumed</description>
    </channel-type>
    
</thing:thing-descriptions>
