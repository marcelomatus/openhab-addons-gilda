<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="smappee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <bridge-type id="smappee">
        <label>Smappee Monitor</label>
        <description>Smappee Monitor Device</description>

        <channels>
            <channel id="consumption" typeId="smappee-consumption-channel"/>
            <channel id="solar" typeId="smappee-solar-channel"/>
            <channel id="alwayson" typeId="smappee-alwayson-channel"/>
        </channels>

        <config-description>
            <parameter name="client_id" type="text" required="true">
                <label>Client Id</label>
                <description>The Smappee Api Oauth client id (obtain by mail from smappee support)</description>
                <advanced>false</advanced>
            </parameter>

            <parameter name="client_secret" type="text" required="true">
                <label>Client Secret</label>
                <description>The Smappee Api Oauth client secret (obtain by mail from smappee support)</description>
                <advanced>false</advanced>
            </parameter>

            <parameter name="username" type="text" required="true">
                <label>Username</label>
                <description>The username for your Smappee</description>
                <advanced>false</advanced>
            </parameter>

            <parameter name="password" type="text" required="true">
                <label>Password</label>
                <description>The password for your Smappee</description>
                <context>password</context>
                <advanced>false</advanced>
            </parameter>
            
            <parameter name="service_location_name" type="text" required="true">
                <label>Service location name</label>
                <description>The name of your Smappee installation</description>
                <advanced>false</advanced>
            </parameter>
            
            <parameter name="poll_time" type="integer" required="true" min="1" max="1440">
                <label>Polling time</label>
                <description>How often (in minutes) does the smappee needs to be checked ?</description>
                <default>5</default>
                <advanced>false</advanced>
            </parameter>
            
        </config-description>                
    </bridge-type>

    <channel-type id="smappee-consumption-channel">
        <item-type>Number</item-type>
        <label>Energy Consumption</label>
        <description>The amount of energy that is being consumed</description>
    </channel-type>
    
    <channel-type id="smappee-solar-channel">
        <item-type>Number</item-type>
        <label>Solar Energy</label>
        <description>The amount of energy that is being generated by your solar power panels</description>
    </channel-type>
        
    <channel-type id="smappee-alwayson-channel">
        <item-type>Number</item-type>
        <label>AlwaysOn</label>
        <description>The amount of energy that is always consumed</description>
    </channel-type>

    <thing-type id="smappee-appliance">
        <supported-bridge-type-refs>
            <bridge-type-ref id="smappee" />
        </supported-bridge-type-refs>
        
        <label>Smappee Appliance</label>
        <description>Detected Smappee Appliance</description>

        <channels>
            <channel id="appliance-power" typeId="smappee-appliance-power"/>
            <channel id="appliance-lastupdate" typeId="smappee-appliance-lastupdate"/>
        </channels>
        
        <config-description>
            <parameter name="id" type="text">
                <label>ID</label>
                <description>Unique identifier for the appliance</description>
                <required>true</required>
            </parameter>
            
            <parameter name="type" type="text">
                <label>Type</label>
                <description>The appliance type</description>
                <required>true</required>
            </parameter>           
        </config-description>
    </thing-type>
    
    <channel-type id="smappee-appliance-power">
        <item-type>Number</item-type>
        <label>Name</label>
        <description>The current power consumption of the appliance</description>
    </channel-type>
    
    <channel-type id="smappee-appliance-lastupdate">
        <item-type>DateTime</item-type>
        <label>Last Update</label>
        <description>The last time this appliance is updated</description>
    </channel-type>
    
    <thing-type id="smappee-actuator">
        <supported-bridge-type-refs>
            <bridge-type-ref id="smappee" />
        </supported-bridge-type-refs>
        
        <label>Smappee Actuator</label>
        <description>Smappee Plug</description>

        <channels>
            <channel id="actuator-switch" typeId="smappee-actuator-switch"/>
        </channels>
        
        <config-description>
            <parameter name="id" type="text">
                <label>ID</label>
                <description>Unique identifier for the actuator</description>
                <required>true</required>
            </parameter>           
        </config-description>
    </thing-type>
    
    <channel-type id="smappee-actuator-switch">
        <item-type>Switch</item-type>
        <label>State</label>
        <description>Turn on the switch</description>
    </channel-type>

    <thing-type id="smappee-sensor">
        <supported-bridge-type-refs>
            <bridge-type-ref id="smappee" />
        </supported-bridge-type-refs>
        <label>Smappee sensor</label>
        <description>Smappee Sensor</description>

        <channels>
            <channel id="sensor-value" typeId="smappee-sensor-value"/>
        </channels>
        
        <config-description>
            <parameter name="id" type="text">
                <label>ID</label>
                <description>Unique identifier for the sensor. format : [SensorId-ChannelId]</description>
                <required>true</required>
            </parameter>                        
            <parameter name="channel_id" type="text">
                <label>ID</label>
                <description>Unique identifier for the channel of this sensor.</description>
                <required>true</required>
            </parameter> 
            <parameter name="type" type="text">
                <label>Type</label>
                <description>The type of the sensor (water/gas/...)</description>
                <required>true</required>
            </parameter>           
        </config-description>
    </thing-type>
    
    <channel-type id="smappee-sensor-value">
        <item-type>String</item-type>
        <label>Value</label>
        <description>The measured value of this sensor</description>
    </channel-type>
    
</thing:thing-descriptions>
