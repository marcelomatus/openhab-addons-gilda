    <!-- Port Channel Type -->
    <channel-type id="button">
        <item-type>Switch</item-type>
        <label>Button</label>
        <description>Button</description>
        <category>Switch</category>
    </channel-type>
    <channel-type id="readonlystring">
        <item-type>String</item-type>
        <label>Readonly</label>
        <description>Readonly</description>
        <category>Information</category>
        <state readOnly="true"/>
    </channel-type>
    <channel-type id="matrixtype">
        <item-type>String</item-type>
        <label>Model Type</label>
        <description>Model Type</description>
        <category>Information</category>
        <state readOnly="true"/>
    </channel-type>
    <channel-type id="portpower">
        <item-type>Switch</item-type>
        <label>Output Port Power</label>
        <description>Turns on/off the output port</description>
        <category>Ports</category>
    </channel-type>
    <channel-type id="portall">
        <item-type>Number</item-type>
        <label>Set All Outputs</label>
        <description>Sets the input port as the source of all output ports</description>
        <category>Ports</category>
    </channel-type>
    <channel-type id="portoutput">
        <item-type>Number</item-type>
        <label>Output Port</label>
        <description>Sets the output port to the input port</description>
        <category>Ports</category>
    </channel-type>
    <channel-type id="portmirror">
        <item-type>Number</item-type>
        <label>Mirror Port</label>
        <description>Sets the port to be mirrored on the output port</description>
        <category>Ports</category>
    </channel-type>
    <channel-type id="volume">
        <item-type>Number</item-type>
        <label>Output Volume</label>
        <description>Sets the volume (in db) of the output port (default: -40db with range from -79db to 15db)</description>
        <category>Volume</category>
        <state min="-79" max="15"/>
    </channel-type>
    <channel-type id="volumemute">
        <item-type>Switch</item-type>
        <label>Mute</label>
        <description>Sets the output to muted or not</description>
        <category>Volume</category>
    </channel-type>
    <channel-type id="savepreset">
        <item-type>Number</item-type>
        <label>Save Preset</label>
        <description>Saves current I/O as a preset</description>
        <category>Presets</category>
    </channel-type>
    <channel-type id="recallpreset">
        <item-type>Number</item-type>
        <label>Recall Preset</label>
        <description>Restores I/O preset</description>
        <category>Presets</category>
    </channel-type>
    <channel-type id="clearpreset">
        <item-type>Number</item-type>
        <label>Clear Preset</label>
        <description>Erases I/O preset</description>
        <category>Presets</category>
    </channel-type>
</thing:thing-descriptions>
