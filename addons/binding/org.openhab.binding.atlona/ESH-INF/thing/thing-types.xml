    <!-- AT-UHD-PRO3-44M -->
    <thing-type id="pro3-44m">
        <label>Atlona Pro3 4x4 Binding</label>
        <description>Atlona Pro3 4x4 Binding</description>

        <channels>
            <channel id="power" typeId="button"><label>Power</label><description>Power to Matrix</description></channel>
            <channel id="version" typeId="readonlystring"><label>Firmware</label><description>Firmware Version</description></channel>
            <channel id="type" typeId="readonlystring"><label>Type</label><description>Model Type</description></channel>
            <channel id="panellock" typeId="button"><label>Panel Lock</label><description>Lock front panel</description></channel>
            <channel id="resetports" typeId="button"><label>Reset Ports</label><description>Resets All ports back to default</description></channel>
            
            <channel id="portpower1" typeId="portpower"/>
            <channel id="portpower2" typeId="portpower"/>
            <channel id="portpower3" typeId="portpower"/>
            <channel id="portpower4" typeId="portpower"/>
            <channel id="portpower5" typeId="portpower"/>
            <channel id="portall" typeId="portall"/>
            <channel id="portoutput1" typeId="portoutput"/>
            <channel id="portoutput2" typeId="portoutput"/>
            <channel id="portoutput3" typeId="portoutput"/>
            <channel id="portoutput4" typeId="portoutput"/>
            <channel id="portoutput5" typeId="portoutput"/>
            <channel id="portmirror5" typeId="portmirror"/>
            <channel id="volume1" typeId="volume"/>
            <channel id="volume2" typeId="volume"/>
            <channel id="volume3" typeId="volume"/>
            <channel id="volumemute1" typeId="volumemute"/>
            <channel id="volumemute2" typeId="volumemute"/>
            <channel id="volumemute3" typeId="volumemute"/>
            <channel id="irenable" typeId="button"><label>Enable IR</label><description>Enables or Disables IR</description></channel>
            <channel id="saveio" typeId="savepreset"/>
            <channel id="recallio" typeId="recallpreset"/>
            <channel id="cleario" typeId="clearpreset"/>
            <channel id="resetmatrix" typeId="button"><label>Reset Matrix</label><description>Resets the matrix back to defaults</description></channel>
        </channels>
        
        <config-description>
            <parameter name="ipAddress" type="text">
                <label>IP or Host Name</label>
                <description>IP or Host name of Atlona Pro3 44M Switch</description>
                <required>true</required>
            </parameter>
            <parameter name="userName" type="text">
                <label>UserName to login with</label>
                <description>User Name to login with if Telnet Login is on</description>
                <required>false</required>
            </parameter>
            <parameter name="password" type="text">
                <label>Password to login with</label>
                <description>Password to login with if Telnet Login is on</description>
                <required>false</required>
            </parameter>
            <parameter name="polling" type="integer">
                <label>Polling Interval</label>
                <description>Interval (in seconds) to poll the actual state of the Matrix</description>
                <default>600</default>
            </parameter>            
            <parameter name="ping" type="integer">
                <label>Pint Interval</label>
                <description>Ping Interval (in seconds) to keep the connection alive</description>
                <default>30</default>
            </parameter>            
            <parameter name="retryPolling" type="integer">
                <label>Polling Interval to try to reconnect</label>
                <description>Interval (in seconds) to try to (re)connect to the matrix</description>
                <default>10</default>
            </parameter>            
        </config-description>
    </thing-type>

