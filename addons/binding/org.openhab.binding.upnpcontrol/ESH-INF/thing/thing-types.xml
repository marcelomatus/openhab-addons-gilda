<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="upnpcontrol"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Thing Types -->
	<thing-type id="upnprenderer">
		<label>UPnPRenderer</label>
		<description>UPnP AV Renderer</description>
		<channels>
			<channel id="volume" typeId="volume" />
			<channel id="mute" typeId="mute" />
			<channel id="control" typeId="control" />
			<channel id="stop" typeId="stop" />
			<channel id="title" typeId="title" />
			<channel id="album" typeId="album" />
			<channel id="albumart" typeId="albumart" />
			<channel id="creator" typeId="creator" />
			<channel id="tracknumber" typeId="tracknumber" />
			<channel id="desc" typeId="desc" />
		</channels>
	</thing-type>
	<thing-type id="upnpserver">
		<label>UPnPServer</label>
		<description>UPnP AV Server</description>
		<channels>
			<channel id="upnprenderer" typeId="upnprenderer" />
			<channel id="currenttitle" typeId="currenttitle" />
			<channel id="select" typeId="select" />
			<channel id="searchcriteria" typeId="searchcriteria" />
			<channel id="search" typeId="search" />
			<channel id="serve" typeId="serve" />
		</channels>
		<config-description>
			<parameter name="filter" type="boolean" required="false">
				<label>Filter content</label>
				<description>Only list content which is playable on the selected renderer</description>
				<default>false</default>
				<advanced>false</advanced>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Channel Types -->
	<channel-type id="volume">
		<item-type>Dimmer</item-type>
		<label>Volume</label>
		<description>Set or get the master volume</description>
		<category>SoundVolume</category>
	</channel-type>
	<channel-type id="mute">
		<item-type>Switch</item-type>
		<label>Mute</label>
		<description>Set or get the mute state</description>
	</channel-type>
	<channel-type id="control">
		<item-type>Player</item-type>
		<label>Control</label>
		<description>Control the player, e.g. start/stop/next/previous/ffward/rewind</description>
		<category>Player</category>
	</channel-type>
	<channel-type id="stop">
		<item-type>Switch</item-type>
		<label>Stop</label>
		<description>Stop the player. ON if the player is stopped</description>
	</channel-type>
	<channel-type id="title">
		<item-type>String</item-type>
		<label>Title</label>
		<description>Now playing title</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="album">
		<item-type>String</item-type>
		<label>Album</label>
		<description>Now playing album</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="albumart">
		<item-type>Image</item-type>
		<label>Album Art</label>
		<description>Now playing album art</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="creator">
		<item-type>String</item-type>
		<label>Creator</label>
		<description>Now playing creator</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="tracknumber">
		<item-type>Number</item-type>
		<label>Track Number</label>
		<description>Now playing track number</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="desc">
		<item-type>String</item-type>
		<label>Description</label>
		<description>Now playing description</description>
		<state readOnly="true" />
	</channel-type>

	<channel-type id="upnprenderer">
		<item-type>String</item-type>
		<label>Renderer</label>
		<description>Select AV renderer</description>
	</channel-type>
	<channel-type id="currenttitle">
		<item-type>String</item-type>
		<label>Current Title</label>
		<description>Current title playing or ready to play</description>
	</channel-type>
	<channel-type id="select">
		<item-type>Switch</item-type>
		<label>Select</label>
		<description>Select item from directory</description>
	</channel-type>
	<channel-type id="searchcriteria">
		<item-type>String</item-type>
		<label>Search Criteria</label>
		<description>Search criteria for searching the directory</description>
	</channel-type>
	<channel-type id="search">
		<item-type>Switch</item-type>
		<label>Search</label>
		<description>Execute search with search criteria</description>
	</channel-type>
	<channel-type id="serve">
		<item-type>Switch</item-type>
		<label>Serve</label>
		<description>Send selection to renderer</description>
	</channel-type>
</thing:thing-descriptions>
