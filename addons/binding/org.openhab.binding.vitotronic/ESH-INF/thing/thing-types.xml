				</properties>
			</channel>
            <channel id="timer_ww_TU" typeId="timer">
				<label>Tuesday timer warm water</label>
				<description>On/Off timer for Tuesday. Up to 4 timers can be set</description>
				<properties>
					<property name="address">2108</property>
