				<option value="Medium">Medium</option>
				<option value="Low">Low</option>
			</options>
			<default>Medium</default>
		</parameter>
	</config-description>
	
	<config-description uri="systeminfo:channels:highpriority">
		<parameter name="priority" type="text">
