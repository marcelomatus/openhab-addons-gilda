<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="mpower" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="socket">
		<supported-bridge-type-refs>
			<bridge-type-ref id="mpower" />
		</supported-bridge-type-refs>

		<label>mPower Socket</label>
		<description>A single socket on a mPower device</description>
		<channels>
			<channel id="power" typeId="power" />
			<channel id="energy" typeId="energy" />
			<channel id="voltage" typeId="voltage" />
			<channel id="outlet" typeId="outlet" />
			<channel id="lastupdate" typeId="lastupdate" />
		</channels>
		<config-description>
			<parameter name="socketNumber" type="integer" min="1" max="8">
				<label>Socket Number</label>
				<description></description>
				<required>true</required>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="power">
		<item-type>Number</item-type>
		<label>Power</label>
		<description>Current power consumption</description>
		<category>Energy</category>
		<state pattern="%.1f W" readOnly="true" />
	</channel-type>
	<channel-type id="energy">
		<item-type>Number</item-type>
		<label>Energy Consumption</label>
		<description>Accumulated energy consumption</description>
		<category>Energy</category>
		<state pattern="%d Wh" readOnly="true" />
	</channel-type>
	<channel-type id="voltage">
		<item-type>Number</item-type>
		<label>Voltage</label>
		<description>Current voltage</description>
		<category>Energy</category>
		<state pattern="%d V" readOnly="true" />
	</channel-type>
	<channel-type id="outlet">
		<item-type>Switch</item-type>
		<label>Outlet</label>
		<description>Switched outlet</description>
		<category>PowerOutlet</category>
		<state readOnly="false" />
	</channel-type>
	<channel-type id="lastupdate" advanced="true">
		<item-type>DateTime</item-type>
		<label>Last update</label>
		<description></description>
		<category></category>
		<state readOnly="true" />
	</channel-type>
</thing:thing-descriptions>
