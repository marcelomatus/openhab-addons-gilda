<?xml version="1.0" encoding="UTF-8"?>
<config-description:config-descriptions
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:config-description="http://eclipse.org/smarthome/schemas/config-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/config-description/v1.0.0
        http://eclipse.org/smarthome/schemas/config-description-1.0.0.xsd">
    <config-description uri="io:azureiothub">
        <parameter name="mode" type="text" required="true">
            <label>Mode</label>
            <description>What type of communication should be used with your azure iot hub.</description>
            <options>
                <option value="publish">Publish</option>
                <option value="publishcommand">Publish &amp; Command</option>
            </options>
            <default>publishcommand</default>
        </parameter>
        <parameter name="connectionstring" type="text" required="false">
            <label>The connectionstring to the azure IOT Hub</label>
            <description>See the binding documentation how to get this connectionstring from the azure portal.</description>
            <default></default>
            <required>true</required>
            <advanced>false</advanced>
        </parameter>
    </config-description>
</config-description:config-descriptions>