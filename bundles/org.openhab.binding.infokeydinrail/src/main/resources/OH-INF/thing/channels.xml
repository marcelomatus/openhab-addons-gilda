	<!-- Analog Input Group Type For mcp3008DinV1 -->
	<channel-group-type id="dht_module_group">
		<label>Output</label>
		<description>DHT 11 / 22 / AM2302 Output (values)</description>
		<channels>
			<channel id="Temp_Celsius" typeId="setpointTemperatureCelcius"/>
			<channel id="Temp_Fahrenheit" typeId="setpointTemperatureFahrenheit"/>
			<channel id="Humidity" typeId="setpointHumidity"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="waterflowmeteryfs201_module_group">
		<label>Output</label>
		<description>Water flowmeter Output (values)</description>
		<channels>
			<channel id="Water_Is_Running" typeId="setpointWaterIsRunning"/>
			<channel id="Water_Flow" typeId="setpointWaterFlow"/>
			<channel id="Last_Total_Ammount" typeId="setpointWaterLastConsumption"/>
		</channels>
	</channel-group-type>

	<channel-type id="input_pin">
		<item-type>Contact</item-type>
		<label>Input Pin</label>
		<description>channel type for MCP23017 pin in DIGITAL_INPUT mode (contact)</description>
		<category>Contact</category>
		<state readOnly="true">
			<options>
				<option value="OPEN">OPEN</option>
				<option value="CLOSE">CLOSE</option>
			</options>
		</state>
		<config-description-ref uri="channel-type:infokey:input_pin"/>
	</channel-type>

	<channel-type id="analog_input_pin">
		<item-type>String</item-type>
		<label>Analog Input Pin</label>
		<description>channel type for MCP 3008 pin in Analog To Digital Input Mode (value)</description>
		<state readOnly="true"/>
		<config-description-ref uri="channel-type:infokey:analog_input_pin"/>
	</channel-type>

	<channel-type id="output_pin">
		<item-type>Switch</item-type>
		<label>Output Pin</label>
		<description>channel type for MCP23017 pin in DIGITAL_INPUT mode (switch)</description>
		<category>Switch</category>
		<state readOnly="false"/>
		<config-description-ref uri="channel-type:infokey:output_pin"/>
	</channel-type>

	<channel-type id="pulse_output_pin">
		<item-type>Switch</item-type>
		<label>Pulse Output Pin</label>
