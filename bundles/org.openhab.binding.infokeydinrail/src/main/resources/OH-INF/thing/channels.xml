	<channel-type id="setpointWaterIsRunning" advanced="false">
		<item-type>String</item-type>
		<label>Water Is Running</label>
		<category>Water</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="setpointWaterFlow" advanced="false">
		<item-type>String</item-type>
		<label>Water flow (L/min)</label>
		<category>Flow</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="setpointWaterLastConsumption">
		<item-type>String</item-type>
		<label>Water Consumption</label>
		<description>The total consumption of the last run</description>
		<state readOnly="true"></state>
	</channel-type>
