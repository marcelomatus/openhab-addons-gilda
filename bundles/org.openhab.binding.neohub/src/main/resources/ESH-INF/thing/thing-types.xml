<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="neohub"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="neohub">

		<label>NeoHub</label>
		<description>The NeoHub bridge to NeoStat and NeoPlug devices</description>

		<properties>
			<property name="vendor">Heatmiser</property>
			<property name="modelId">NeoHub</property>
	        </properties>

	 	<config-description>
			<parameter name="hostName" type="text" required="true">
				<label>Host Name</label>
				<description>Host name (IP address) of the NeoHub</description>
			</parameter>

			<parameter name="portNumber" type="integer" required="true">
				<label>Port Number</label>
				<description>Port number of the NeoHub</description>
				<default>4242</default>
			</parameter>

			<parameter name="pollInterval" type="integer" min="10" required="true">
				<label>Polling Interval</label>
				<description>Time (seconds) between polling requests to the NeoHub</description>
				<default>60</default>
			</parameter>

		</config-description>

	</bridge-type>

	<thing-type id="neostat">

		<supported-bridge-type-refs>
			<bridge-type-ref id="neohub"/>
		</supported-bridge-type-refs>

		<label>NeoStat</label>
		<description>Heatmiser Neostat Smart Thermostat</description>

		<channels>
			<channel id="roomTemperature" typeId="temperature">
		        <label>Room Temperature</label>
        		<description>Actual room temperature</description>
			</channel>

			<channel id="setTemperature" typeId="setTemperature">
		   		<label>Target Temperature</label>
   				<description>Target temperature setting for the room</description>
			</channel>

			<channel id="floorTemperature" typeId="temperature">
		        <label>Floor Temperature</label>
        		<description>Actual floor temperature</description>
			</channel>

			<channel id="heatingMode" typeId="heatingMode">
		   		<label>Heating (Off::Heating)</label>
   				<description>Indicates is the thermostat is calling for heat</description>
			</channel>

			<channel id="absentPresent" typeId="absentPresent">
		   		<label>Occupancy State (Absent::Present)</label>
   				<description>The occupancy state of the thermostat (user can override)</description>
			</channel>

		</channels>

		<properties>
			<property name="vendor">Heatmiser</property>
			<property name="modelId">NeoStat</property>
			<property name="deviceNameInHub"></property>
		</properties>
	    <representation-property>deviceNameInHub</representation-property>

	</thing-type>

	<thing-type id="neoplug">

		<supported-bridge-type-refs>
			<bridge-type-ref id="neohub" />
		</supported-bridge-type-refs>

		<label>NeoPlug</label>
		<description>Heatmiser NeoPlug Smart Plug</description>

		<channels>
			<channel id="offOn" typeId="offOn">
		   		<label>Switch State (Off::On)</label>
   				<description>The state of the plug (user can override)</description>
			</channel>

			<channel id="manualAuto" typeId="manualAuto">
		   		<label>Program Mode (Manual::Auto)</label>
   				<description>The program mode of the plug (user can override)</description>
			</channel>
		</channels>

		<properties>
			<property name="vendor">Heatmiser</property>
			<property name="modelId">NeoPlug</property>
			<property name="deviceNameInHub"></property>
	    </properties>
       	<representation-property>deviceNameInHub</representation-property>

	</thing-type>

	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<description>Measured temperature value (Read-Only)</description>
   		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="setTemperature">
   		<item-type>Number:Temperature</item-type>
   		<label>Set Temperature</label>
		<description>Target temperature setting</description>
   		<state readOnly="false" pattern="%.1f %unit%" min="5" max="30" step="1"/>
	</channel-type>
	
	<channel-type id="heatingMode">
		<item-type>String</item-type>
		<label>Heating (Off::Heating)</label>
 		<description>Indicates is the thermostat is calling for heat</description>
   		<state readOnly="true"/>
	</channel-type>

	<channel-type id="absentPresent">
		<item-type>Switch</item-type>
		<label>Occupancy Sate (Absent::Present)</label>
   		<description>The occupancy mode of the thermostat (user can override)</description>
   		<state readOnly="false"/>
	</channel-type>

	<channel-type id="manualAuto">
		<item-type>Switch</item-type>
		<label>Program Mode (Manual::Auto)</label>
   		<description>The program mode of the device (user can override)</description>
   		<state readOnly="false"/>
	</channel-type>

	<channel-type id="offOn">
		<item-type>Switch</item-type>
		<label>Switch State (Off::On)</label>
   		<description>The state of the plug (user can override)</description>
   		<state readOnly="false"/>
	</channel-type>

</thing:thing-descriptions>
