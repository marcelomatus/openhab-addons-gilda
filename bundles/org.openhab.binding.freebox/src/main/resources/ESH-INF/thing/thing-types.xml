<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="freebox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="server">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>Freebox Server</label>
		<description>Provides various informations regarding the status of the Freebox Server</description>

		<channel-groups>
			<channel-group typeId="display" id="display" />
			<channel-group typeId="sensors" id="sensors" />
			<channel-group typeId="samba" id="samba" />
			<channel-group typeId="sysinfo" id="sysinfo" />
			<channel-group typeId="actions" id="actions" />
			<channel-group typeId="connection-status" id="connection-status" />
		</channel-groups>		

		<config-description-ref uri="thing-type:freebox:server" />

	</thing-type>

	<thing-type id="delta">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>Freebox Delta</label>
		<description>Provides various informations regarding the status of the Freebox Delta</description>

		<channel-groups>
			<channel-group typeId="sensors" id="sensors" />
			<channel-group typeId="samba" id="samba" />
			<channel-group typeId="sysinfo" id="sysinfo" />
			<channel-group typeId="actions" id="actions" />
			<channel-group typeId="connection-status" id="connection-status" />
		</channel-groups>	

		<config-description-ref uri="thing-type:freebox:server" />

	</thing-type>

	<thing-type id="player">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>Freebox Player</label>
		
		<channel-groups>
			<channel-group typeId="connectivity" id="connectivity" />
			<channel-group typeId="player-actions" id="player-actions" />
		</channel-groups>

		<config-description-ref uri="thing-type:freebox:player" />

	</thing-type>

	<thing-type id="phone">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>Phone</label>
		<description>Provides various informations regarding the phone state and the phone calls</description>

		<channel-groups>
			<channel-group typeId="state" id="state" />
			<channel-group typeId="any" id="any" />
			<channel-group typeId="accepted" id="accepted" />
			<channel-group typeId="missed" id="missed" />
			<channel-group typeId="outgoing" id="outgoing" />
		</channel-groups>

		<config-description-ref uri="thing-type:freebox:phone" />

	</thing-type>

	<thing-type id="net_device">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>


		<label>Network Device</label>
		<description>Provides network device reachability</description>

		<channel-groups>
			<channel-group typeId="connectivity" id="connectivity" />
		</channel-groups>

		<config-description-ref uri="thing-type:freebox:net_device" />

	</thing-type>

	<thing-type id="airplay">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>AirPlay Receiver</label>
		<description>Provides media control from one AirPlay device</description>

		<channels>
		</channels>

		<config-description-ref uri="thing-type:freebox:airplay" />
	</thing-type>

	<thing-type id="vm">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api" />
		</supported-bridge-type-refs>

		<label>Virtual Machine</label>
		<description>Provides informations and control over a virtual machine</description>

		<channel-groups>
			<channel-group typeId="connectivity" id="connectivity" />
			<channel-group typeId="vmstatus" id="vmstatus" />
		</channel-groups>

		<config-description-ref uri="thing-type:freebox:vm" />
	</thing-type>

</thing:thing-descriptions>
