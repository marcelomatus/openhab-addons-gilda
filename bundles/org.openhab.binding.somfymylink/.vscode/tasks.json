{
    "version": "2.0.0",
    "options": {
        "env": {
            "openhab_addons": "c:\\\\projects\\openhab\\addons",
            "dist": "org.openhab.binding.somfymylink-2.5.0-SNAPSHOT.jar"
        }
    },
    "tasks": [
        {
            "label": "MvnCompile",
            "type": "shell",
            "command": "mvn",
            "args": [
                "-o",
                "clean",
                "install",
                "-DskipChecks"
            ]
        },
        {
            "label": "CopyJar",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceFolder}\\target\\$env:dist",
                "$env:openhab_addons"
            ],
            "dependsOn": [ "MvnCompile" ]
            },
        {
            "label": "Build",
            "dependsOn": [ "CopyJar" ]
        }
    ]
}