		<item-type>Number:Temperature</item-type>
		<label>TemperatureProbeIn</label>
		<description>temperature flowing to probe head</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="temperatureProbeOut">
		<item-type>Number:Temperature</item-type>
		<label>TemperatureProbeOut</label>
		<description>temperature coming from probe head</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="hoursCompressor1">
		<item-type>String</item-type>
		<label>HoursCompressor1</label>
		<description>operating hours of compressor 1 one</description>
		<category>Time</category>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="startsCompressor1">
		<item-type>Number</item-type>
		<label>StartsCompressor1</label>
		<description>total starts of compressor 1 one</description>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="hoursCompressor2">
		<item-type>String</item-type>
		<label>HoursCompressor2</label>
		<description>operating hours of compressor 2 one</description>
		<category>Time</category>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="startsCompressor2">
		<item-type>Number</item-type>
		<label>StartsCompressor2</label>
		<description>total starts of compressor 2 one</description>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="hoursHeatpump">
		<item-type>String</item-type>
		<label>HoursHeatpump</label>
