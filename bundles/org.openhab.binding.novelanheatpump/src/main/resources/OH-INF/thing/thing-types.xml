		<config-description>
			<parameter name="address" type="text" required="true">
				<context>network-address</context>
				<label>The Network Address of the Heatpump</label>
				<description>Heatpump network address</description>
			</parameter>
			<parameter name="port" type="integer" min="1" max="65335">
				<label>Port</label>
				<description>Port of the Heatpump API</description>
				<default>8888</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="refresh" type="integer" min="10" unit="s">
				<label>Refresh Interval</label>
				<description>Heatpump data fetches interval (in seconds)</description>
				<default>60</default>
				<unitLabel>s</unitLabel>
				<advanced>true</advanced>
			</parameter>
		</config-description>

