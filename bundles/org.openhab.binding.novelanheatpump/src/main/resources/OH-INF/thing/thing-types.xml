		<label>HoursWarmwater</label>
		<description>operating hours creating warm water</description>
		<category>Time</category>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="hoursCooling">
		<item-type>String</item-type>
		<label>HoursCooling</label>
		<description>operating hours of cooling</description>
		<category>Time</category>
		<state readOnly="true">
		</state>
	</channel-type>
	<channel-type id="thermalenergyHeating">
		<item-type>Number:Energy</item-type>
		<label>ThermalenergyHeating</label>
		<description>total energy for heating in KWh</description>
		<category>Energy</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="thermalenergyWarmwater">
		<item-type>Number:Energy</item-type>
		<label>ThermalenergyWarmwater</label>
		<description>total energy for heating in KWh</description>
		<category>Energy</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="thermalenergyPool">
		<item-type>Number:Energy</item-type>
		<label>ThermalenergyPool</label>
		<description>total energy for heating pool in KWh</description>
		<category>Energy</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="thermalenergyTotal">
		<item-type>Number:Energy</item-type>
		<label>ThermalenergyTotal</label>
		<description>sum of all total energy in KWh</description>
		<category>Energy</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>
</thing:thing-descriptions>
