		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<label>IP address</label>
				<description>IP address of the heat pump to connect to</description>
			</parameter>
			<parameter name="port" type="integer" required="false">
				<label>Port</label>
				<default>8888</default>
				<description>Port number of the heat pump to connect to. Defaults to 8888. Please be aware that from
					firmware version
					1.73, Alpha Innotec has changed the port to 8889.</description>
			</parameter>
			<parameter name="refresh" type="integer" required="false">
				<label>Refresh inverval</label>
				<default>300</default>
				<description>Refresh inverval in seconds. Defaults to 300</description>
			</parameter>
