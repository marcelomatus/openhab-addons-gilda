<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="icalpresence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
    <thing-type id="calendar">
        <label>Calendar</label>
        <description>Calendar based on a readable iCal calendar.</description>

        <channels>
            <channel id="current_title" typeId="calendar-current_title" />
            <channel id="current_start" typeId="calendar-current_start" />
            <channel id="current_end" typeId="calendar-current_end" />
            <channel id="current_presence" typeId="calendar-current_presence" />
            <channel id="next_title" typeId="calendar-next_title" />
            <channel id="next_start" typeId="calendar-next_start" />
            <channel id="next_end" typeId="calendar-next_end" />
        </channels>

        <config-description>
            <parameter name="url" type="text" required="true">
                <label>URL</label>
                <description>URL to find events for presence</description>
            </parameter>
            <parameter name="refreshTime" type="integer" required="true">
                <label>refresh time</label>
                <description>interval to scan for changes (minutes)</description>
            </parameter>
            <parameter name="readAheadTime" type="integer" required="true">
                <label>read-ahead time</label>
                <description>timespan to read events ahead (minutes)</description>
            </parameter>
            <parameter name="username" type="text" required="false">
                <label>username</label>
                <description>username for fetching the calendar (usable in combination with password in HTTP basic auth)</description>
            </parameter>
            <parameter name="password" type="text" required="false">
                <label>password</label>
                <description>password for fetching the calendar (usable in combination with username in HTTP basic auth)</description>
            </parameter>
        </config-description>

    </thing-type>

	<channel-type id="calendar-current_title">
        <item-type>String</item-type>
        <label>current event title</label>
        <description>title of a currently present event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-current_start">
        <item-type>DateTime</item-type>
        <label>current event start</label>
        <description>start of a currently present event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-current_end">
        <item-type>DateTime</item-type>
        <label>current event end</label>
        <description>end of a currently present event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-current_presence">
        <item-type>Switch</item-type>
        <label>current event presence</label>
        <description>current presence of a event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-next_title">
        <item-type>String</item-type>
        <label>next event title</label>
        <description>title of the next event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-next_start">
        <item-type>DateTime</item-type>
        <label>next event start</label>
        <description>start of the next event</description>
        <state readOnly="true" />
    </channel-type>
    <channel-type id="calendar-next_end">
        <item-type>DateTime</item-type>
        <label>next event end</label>
        <description>end of the next event</description>
        <state readOnly="true" />
    </channel-type>
</thing:thing-descriptions>
