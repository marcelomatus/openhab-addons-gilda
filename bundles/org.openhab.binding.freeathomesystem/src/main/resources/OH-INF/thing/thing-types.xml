<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="freeathomesystem"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!--Thing Types -->
	<!--Rule Thing Type -->
	<thing-type id="rule" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Rule</label>
		<description>Rule Handler for Free@Home Binding</description>

		<channels>
			<channel id="switchChannel" typeId="switch_channel_type">
				<label>Rule Activation</label>
				<description>Rule Activation (On/Off)</description>
			</channel>
		</channels>
	</thing-type>

	<!--Scene Thing Type -->
	<thing-type id="scene" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Scene</label>
		<description>Scene Handler for Free@Home Binding</description>

		<channels>
			<channel id="switchChannel" typeId="switch_channel_type">
				<label>Scene Trigger</label>
				<description>Scene Activation Trigger</description>
			</channel>
		</channels>
	</thing-type>

	<!--Actuator Thing Type -->
	<thing-type id="actuator" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Actuator</label>
		<description>Actuator for Free@Home Binding</description>

		<channels>
			<channel id="switchChannel" typeId="switch_channel_type">
				<label>Actuator Channel</label>
				<description>Actuator (ON/OFF) Channel for Free@Home Binding</description>
			</channel>
		</channels>
	</thing-type>

	<!--Corridorlight Thing Type -->
	<thing-type id="corridorlight" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Actuator</label>
		<description>Actuator for Free@Home Binding</description>

		<channels>
			<channel id="switchChannel" typeId="switch_channel_type">
				<label>Actuator Channel</label>
				<description>Actuator (ON/OFF) Channel for Free@Home Binding</description>
			</channel>
		</channels>
	</thing-type>

	<!--Dooropener Actuator Thing Type -->
	<thing-type id="dooropener" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Actuator</label>
		<description>Actuator for Free@Home Binding</description>

		<channels>
			<channel id="switchChannel" typeId="switch_channel_type">
				<label>Actuator Channel</label>
				<description>Actuator (ON/OFF) Channel for Free@Home Binding</description>
			</channel>
		</channels>
	</thing-type>

	<!--Thermostat Thing Type -->
	<thing-type id="thermostat" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Thermostat</label>
		<description>Thermostat for Free@Home binding</description>

		<channels>
			<channel id="thermostatSetpointTemperature" typeId="thermostat_temp_channel_type">
				<label>Setpoint Temperature</label>
				<description>Setpoint Temperature of Free@Home Binding</description>
			</channel>
			<channel id="thermostatMeasuredTemperature" typeId="thermostat_temp_channel_type_ro">
				<label>Thermostat Measured Temperature</label>
				<description>Measured Temperature of the Free@Home Thermostat</description>
			</channel>
			<channel id="thermostatHeatingDemand" typeId="thermostat_heatingvalue_channel_type_ro">
				<label>Thermostat Heating Demand</label>
				<description>Heating Demand at the Free@Home Thermostat</description>
			</channel>
			<channel id="thermostatHeatingActive" typeId="thermostat_heatingvalue_channel_type_ro">
				<label>Thermostat Heating Active (1/0)</label>
				<description>Heating Active at the Free@Home Thermostat</description>
			</channel>
			<channel id="thermostatState" typeId="thermostat_state_channel_type">
				<label>Thermostat State</label>
				<description>Current State of the Free@Home Thermostat (Eco(36), Heating (0))</description>
			</channel>
			<channel id="thermostatOnoffSwitch" typeId="thermostat_Switch_channel_type">
				<label>Thermostat Activation (On/Off)</label>
				<description>Thermostat Main Activation Switch</description>
			</channel>
			<channel id="thermostatEcoSwitch" typeId="thermostat_Switch_channel_type">
				<label>Thermostat Eco (On/Off)</label>
				<description>Thermostat Eco Activation Switch</description>
			</channel>
		</channels>
	</thing-type>

	<!--Window Sensor Thing Type -->
	<thing-type id="windowsensor" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Window Sensor</label>
		<description>Window Sensor for Free@Home Binding</description>
		<channels>
			<channel id="windowState" typeId="window_state_channel_type">
				<label>Window State Channel</label>
				<description>Window State / 1 - Open, 0 - Closed</description>
			</channel>
			<channel id="windowPosition" typeId="window_pos_channel_type">
				<label>Window Position Channel</label>
				<description>Position of Window</description>
			</channel>
		</channels>
	</thing-type>

	<!--Doorring Sensor Thing Type -->
	<thing-type id="doorringsensor" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Door Ring Sensor</label>
		<description>Door Ring for Free@Home Binding</description>
		<channels>
			<channel id="doorringSensor" typeId="doorringsensor_channel_type">
				<label>Ring State Channel</label>
				<description>Ring State / 1 - Active, 0 - Note Active</description>
			</channel>
		</channels>
	</thing-type>

	<!--Shutter Actuator Thing Type -->
	<thing-type id="shutteractuator" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Shutter Actuator</label>
		<description>Shutter Actuator for Free@Home Binding</description>
		<channels>
			<channel id="shutterUpDownTrigger" typeId="shutter_channel_type">
				<label>Shutter Actuator Up/Down Trigger Channel</label>
				<description>Shutter Actuator Up/Down Trigger Channel for Free@Home Binding</description>
			</channel>
			<channel id="shutterPosition" typeId="shutter_channel_type">
				<label>Shutter Actuator Position Channel</label>
				<description>Shutter Actuator Position Channel for Free@Home Binding</description>
			</channel>
		</channels>
	</thing-type>

	<!--Dimming Actuator Thing Type -->
	<thing-type id="dimmingactuator" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge"/>
		</supported-bridge-type-refs>
		<label>Dimming Actuator</label>
		<description>Dimming Actuator for Free@Home Binding</description>
		<channels>
			<channel id="dimmerSwitchChannel" typeId="switch_channel_type">
				<label>Dimming Actuator Channel</label>
				<description>Dimming Actuator Channel for Free@Home Binding</description>
			</channel>
			<channel id="dimmerValue" typeId="dimmer_value_type">
				<label>Dimming Value Channel</label>
				<description>Dimming Value Channel for Free@Home Binding</description>
			</channel>
		</channels>
	</thing-type>

	<!--Channel Types -->
	<!--Switch Channel Type -->
	<channel-type id="switch_channel_type">
		<item-type>Switch</item-type>
		<label>Sensor/Actuator Channel</label>
		<description>Free@Home Sensor Actuator Channel</description>
		<category>Switch</category>
	</channel-type>

	<!--Thermostat temperature channel types -->
	<channel-type id="thermostat_temp_channel_type">
		<item-type>Number</item-type>
		<label>Temperature</label>
		<description>Free@Home Thermostat Temperature</description>
		<category>Temperature</category>
		<state min="0" max="30" step="0.5" pattern="%.1f °C" readOnly="false"></state>
	</channel-type>
	<channel-type id="thermostat_temp_channel_type_ro">
		<item-type>Number</item-type>
		<label>Read-only Temperature</label>
		<description>Free@Home Thermostat Temperature (Read-only)</description>
		<category>Temperature</category>
		<state pattern="%.1f °C" readOnly="true"></state>
	</channel-type>
	<channel-type id="thermostat_state_channel_type">
		<item-type>Number</item-type>
		<label>Thermostat Status Value</label>
		<description>Free@Home Thermostat Status Value</description>
		<category>Number</category>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="thermostat_Switch_channel_type">
		<item-type>Switch</item-type>
		<label>Thermostat On/Off type</label>
		<description>Free@Home Thermostat On/Off Type for Activation and Eco Mode</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="thermostat_heatingvalue_channel_type_ro">
		<item-type>Number</item-type>
		<label>Read-only Heating Demand / Heating Value</label>
		<description>Free@Home Thermostat Heating Demand Values (Read-only)</description>
		<category>Temperature</category>
		<state readOnly="true"></state>
	</channel-type>

	<!--Window Sensor Channel Type -->
	<channel-type id="window_state_channel_type">
		<item-type>Number</item-type>
		<label>Window State Channel</label>
		<description>Free@Home Sensor Input Channel</description>
		<category>Number</category>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="window_pos_channel_type">
		<item-type>Number</item-type>
		<label>Window Position Channel</label>
		<description>Free@Home Sensor Input Channel</description>
		<category>Number</category>
		<state readOnly="true"></state>
	</channel-type>

	<!--Doorring Channel Type -->
	<channel-type id="doorringsensor_channel">
		<item-type>Number</item-type>
		<label>Ring Channel</label>
		<description>Free@Home Ring Input Channel</description>
		<category>Number</category>
		<state readOnly="true"></state>
	</channel-type>

	<!--Shutter Actuator Channel Type -->
	<channel-type id="shutter_channel_type">
		<item-type>Rollershutter</item-type>
		<label>Shutter Movement and Position</label>
		<description>Free@Home Shutter Actuator Channel to Step Movement and Setting Position</description>
		<category>Blinds</category>
	</channel-type>

	<!--Sensor Actuator Channel Type -->
	<channel-type id="dimmer_value_type">
		<item-type>Dimmer</item-type>
		<label>Dimming Channel</label>
		<description>Free@Home Dimming Actuator Channel</description>
		<category>Dimmer</category>
	</channel-type>
</thing:thing-descriptions>
