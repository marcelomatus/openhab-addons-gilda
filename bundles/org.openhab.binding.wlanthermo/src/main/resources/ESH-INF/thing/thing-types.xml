	<thing-type id="thermometer">
		<label>WlanThermo</label>
		<description>WlanThermo Nano V1/V1+ (or Mini V1/V2, untested!)</description>

		<channel-groups>
			<channel-group id="system" typeId="cg_system" />
			<channel-group id="channel1" typeId="cg_temperature1" />
			<channel-group id="channel2" typeId="cg_temperature2" />
			<channel-group id="channel3" typeId="cg_temperature3" />
			<channel-group id="channel4" typeId="cg_temperature4" />
			<channel-group id="channel5" typeId="cg_temperature5" />
			<channel-group id="channel6" typeId="cg_temperature6" />
			<channel-group id="channel7" typeId="cg_temperature7" />
			<channel-group id="channel8" typeId="cg_temperature8" />
		</channel-groups>

		<config-description>
			<parameter name="ipAddress" type="text">
				<context>network-address</context>
				<label>Network Address</label>
				<description>Network address of the WlanThermo.</description>
				<required>true</required>
			</parameter>
			<parameter name="username" type="text">
				<label>Username</label>
				<description>Optional, only required for write access. Default: 'admin'</description>
				<required>false</required>
				<default>admin</default>
			</parameter>
			<parameter name="password" type="text">
				<context>password</context>
				<label>Password</label>
				<description>Optional, only required for write access. Default: 'admin'</description>
				<required>false</required>
				<default>admin</default>
			</parameter>
			<parameter name="pollingInterval" type="integer" min="1" step="1" unit="s">
				<label>Polling Interval</label>
				<description>Seconds between fetching values from the WlanThermo.</description>
				<required>true</required>
				<default>10</default>
			</parameter>
		</config-description>

	</thing-type>

	<!-- System Group -->
	<channel-group-type id="cg_system">
		<label>System Channel</label>
		<description>This group contains all system channels</description>
		<channels>
			<channel id="soc" typeId="system.battery-level" />
			<channel id="charge" typeId="charging" />
			<channel id="rssi" typeId="system.signal-strength" />
			<channel id="online" typeId="online" />
		</channels>
	</channel-group-type>

	<channel-type id="charging" advanced="true">
		<item-type>Switch</item-type>
		<label>Charging</label>
		<category>Energy</category>
		<state readOnly="true" />
	</channel-type>

	<channel-type id="online" advanced="true">
		<item-type>Switch</item-type>
		<label>Online</label>
		<category>Switch</category>
		<state readOnly="true" />
	</channel-type>

