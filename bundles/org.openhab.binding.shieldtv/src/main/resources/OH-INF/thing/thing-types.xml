<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="shieldtv"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="shieldtv">

		<label>ShieldTV Binding Thing</label>
		<description>Sample thing for ShieldTV Binding</description>

		<channels>
			<channel id="keypress" typeId="keypress"/>
			<channel id="raw" typeId="raw"/>
			<channel id="pincode" typeId="pincode"/>
			<channel id="rawmsg" typeId="rawmsg"/>
			<channel id="startapp" typeId="startapp"/>
		</channels>

		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>Hostname or IP address of the device</description>
			</parameter>
		</config-description>

		<config-description>
			<parameter name="keystore" type="text" required="true">
				<context>keystore filename</context>
				<label>Keystore Filename</label>
				<description>Filename for the keystore</description>
			</parameter>
		</config-description>

		<config-description>
			<parameter name="keystorePassword" type="text" required="true">
				<context>keystore password</context>
				<label>Keystore password</label>
				<description>Password for the keystore</description>
			</parameter>
		</config-description>

	</thing-type>

	<channel-type id="raw" advanced="true">
		<item-type>String</item-type>
		<label>RAW Command</label>
		<description>RAW command to send (for debugging)</description>
	</channel-type>

	<channel-type id="rawmsg" advanced="true">
		<item-type>String</item-type>
		<label>RAWMSG Command</label>
		<description>RAW message to handle (for debugging)</description>
	</channel-type>

	<channel-type id="startapp" advanced="true">
		<item-type>String</item-type>
		<label>Start App</label>
		<description>Start App by Name</description>
	</channel-type>

	<channel-type id="keypress" advanced="true">
		<item-type>String</item-type>
		<label>Key Press</label>
		<description>Send key press</description>
	</channel-type>

	<channel-type id="pincode" advanced="true">
		<item-type>String</item-type>
		<label>Pin Code</label>
		<description>Send Pin Code</description>
	</channel-type>

</thing:thing-descriptions>
