<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="sonyps4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="SonyPS4">
		<label>PlayStation 4</label>
		<description>Sony PlayStation 4 console.</description>

		<channels>
			<channel id="power" typeId="power-channel" />
			<channel id="applicationName" typeId="application-channel" />
			<channel id="applicationId" typeId="applicationId-channel" />
			<channel id="applicationImage" typeId="applicationImage-channel" />
			<channel id="oskText" typeId="oskText-channel" />
			<channel id="disconnect" typeId="disconnect-channel" />
			<channel id="keyUp" typeId="keyUp-channel" />
			<channel id="keyDown" typeId="keyDown-channel" />
			<channel id="keyRight" typeId="keyRight-channel" />
			<channel id="keyLeft" typeId="keyLeft-channel" />
			<channel id="keyEnter" typeId="keyEnter-channel" />
			<channel id="keyBack" typeId="keyBack-channel" />
			<channel id="keyOption" typeId="keyOption-channel" />
			<channel id="keyPS" typeId="keyPS-channel" />
		</channels>

		<properties>
			<property name="vendor">Sony</property>
			<property name="modelId">PlayStation 4</property>
		</properties>
		<representation-property>deviceId</representation-property>

		<config-description>
			<parameter name="userCredential" type="text" required="true">
				<label>User credential</label>
				<description>User credential to communicate with the PlayStation 4, 64 hex characters.</description>
			</parameter>
			<parameter name="passCode" type="text">
				<label>Pass code</label>
				<description>Pass code to log in to PlayStation 4, optional, 4 digits.</description>
			</parameter>
			<parameter name="pairingCode" type="text">
				<label>Pairing code</label>
				<description>Pairing code to pair OpenHAB device to PlayStation 4, only needed during pairing, 8 digits.</description>
			</parameter>
			<parameter name="connectionTimeout" type="integer" min="0">
				<label>Connection timeout</label>
				<description>How many seconds after the last command the connection to the PS4 closes down. Use 0 to never close connection.</description>
				<default>60</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="autoConnect" type="boolean">
				<label>Auto connect</label>
				<description>Should the binding try to connect to the PS4 as soon as it's turned on.</description>
				<default>false</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="artworkSize" type="integer" min="128" max="1024">
				<label>Artwork size</label>
				<description>The width and height of the downloaded artwork.</description>
				<default>320</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="ipAddress" type="text" required="true">
				<context>network-address</context>
				<label>IP address</label>
				<description>The local IP address or hostname of the PlayStation 4.</description>
				<advanced>true</advanced>
			</parameter>
			<parameter name="ipPort" type="integer">
				<label>IP port</label>
				<description>The TCP port used to communicate with the PlayStation 4.</description>
				<default>997</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>

	</thing-type>

	<channel-type id="power-channel">
		<item-type>Switch</item-type>
		<label>PS4 Power</label>
		<description>Shows if PS4 is on or in standby.</description>
		<tags>
			<tag>Switchable</tag>
		</tags>
	</channel-type>
	<channel-type id="application-channel">
		<item-type>String</item-type>
		<label>Application</label>
		<description>Name of the currently running application.</description>
		<state pattern="%s" readOnly="true" />
	</channel-type>
	<channel-type id="applicationId-channel">
		<item-type>String</item-type>
		<label>Application ID</label>
		<description>ID of the currently running application.</description>
		<category>MediaControl</category>
		<state>
			<options>
				<option value="CUSA00127">Netflix</option>
				<option value="CUSA01116">Youtube</option>
				<option value="CUSA00124">Viaplay</option>
				<option value="CUSA02827">HBO</option>
				<option value="CUSA01780">Spotify</option>
				<option value="CUSA11993">Marvel's Spider-Man</option>
				<option value="CUSA00342">Other game</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="applicationImage-channel">
		<item-type>Image</item-type>
		<label>Artwork</label>
		<description>Application artwork.</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="oskText-channel" advanced="true">
		<item-type>String</item-type>
		<label>OSK Text</label>
		<description>The text from the OnScreenKeyboard.</description>
	</channel-type>
	<channel-type id="disconnect-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Disconnect</label>
		<description>Disconnect from PS4.</description>
	</channel-type>
	<channel-type id="keyUp-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Up button</label>
		<description>Push Up button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyDown-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Down button</label>
		<description>Push Down button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyRight-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Right button</label>
		<description>Push Right button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyLeft-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Left button</label>
		<description>Push Left button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyEnter-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Enter button</label>
		<description>Push Enter button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyBack-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Back button</label>
		<description>Push Back button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyOption-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Option button</label>
		<description>Push Option button.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="keyPS-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>PS button</label>
		<description>Push PS button.</description>
		<category>MediaControl</category>
	</channel-type>

</thing:thing-descriptions>
