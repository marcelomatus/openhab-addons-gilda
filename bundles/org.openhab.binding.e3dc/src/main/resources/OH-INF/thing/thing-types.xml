		<properties>
			<!-- <property name="serialNumber"/> -->
			<property name="productionDate">
			</property>
			<property name="softwareVersion">
			</property>
			<property name="macAddress">
			</property>
			<property name="ipAddress">
			</property>
			<property name="subnetMask">
			</property>
			<property name="gatwayAddress">
			</property>
			<property name="dnsAddress">
			</property>
			<property name="bindingBuild">
			</property>

			<property name="connectedPowermeters">
			</property>
			<property name="connectedWallboxes">
			</property>
			<property name="connectedFarmingDevices">
			</property>
			<property name="connectedFarmingDevicesRev">
			</property>
			<property name="connectedStrings">
			</property>
			<property name="connectedInverters">
			</property>
			<property name="connectedStorageExtensions">
			</property>
		</properties>


		<representation-property>serialNumber</representation-property>

		<config-description>
			<parameter-group name="network">
				<label>Network</label>
				<description>Network settings.</description>
			</parameter-group>
			<parameter-group name="authentication">
				<label>Authentication</label>
				<description>Authentication settings.</description>
			</parameter-group>
			<parameter-group name="connection">
				<label>Connection</label>
				<description>Connection settings.</description>
			</parameter-group>
			<parameter-group name="setup">
				<label>Setup</label>
				<description>Setup settings.</description>
			</parameter-group>


			<parameter name="ip" type="text" required="true" groupName="network">
				<label>IP Address</label>
				<description>IP address or host name of the S10</description>
				<context>network-address</context>
			</parameter>

			<parameter name="port" type="integer" min="1" max="65535" required="true" groupName="network">
				<label>Port</label>
				<description>IP Port of the S10 (default: 5033)</description>
				<default>5033</default>
				<context>network-address</context>
			</parameter>

			<parameter name="webusername" type="text" required="true" groupName="authentication">
				<label>Username Webinterface</label>
				<description>Username E3DC Webinterface</description>
			</parameter>

			<parameter name="webpassword" type="text" required="true" groupName="authentication">
				<context>password</context>
				<label>Password Webinterface</label>
				<description>Password E3DC Webinterface</description>
			</parameter>

			<parameter name="rscppassword" type="text" required="true" groupName="authentication">
				<context>password</context>
				<label>RSCP Password</label>
				<description>RSCP Password (minimum 6 characters)</description>
			</parameter>

			<parameter name="updateinterval" type="integer" max="65535" min="5" required="false" groupName="connection"
				unit="s">
				<label>Update Interval</label>
				<description>Data update interval in seconds (default: 60s, min: 5s, max: 65535)</description>
				<default>60</default>
			</parameter>

			<parameter name="powerMeterCount" type="integer" max="3" min="0" required="false" groupName="setup">
				<label>Power meter count (forced)</label>
				<description>Forced (get data even if not found) number of power meters connected (default: 1, min: 1, max: 3)</description>
				<default>0</default>
			</parameter>

			<parameter name="trackerCount" type="integer" max="2" min="0" required="false" groupName="setup">
				<label>MPP Tracker count (forced)</label>
				<description>Forced (get data even if not found) number of MPP trackers used (default: 1, min: 0, max: 2)</description>
				<default>0</default>
			</parameter>

			<parameter name="wallboxCount" type="integer" max="2" min="0" required="false" groupName="setup">
				<label>Wallbox count (forced)</label>
				<description>Forced (get data even if not found) number of power meters connected (default: 0, min: 0, max: 2)</description>
				<default>0</default>
			</parameter>

		</config-description>




	</thing-type>



</thing:thing-descriptions>
