	<thing-type id="s10">
		<label>E3DC S10</label>
		<description>Provides access for all S10 devices (S10 E / S10 E COMPACT / S10 X / S10 E PRO / S10 E PRO COMPACT / S10
			MINI)</description>
		<category>solarplant</category>

		<channel-groups>
			<channel-group id="ems" typeId="ems"/>								<!-- EMS 0x01 / -->
			<channel-group id="pvi01" typeId="pvi"/>							<!-- PVI 0x02 / -->
			<channel-group id="battery01" typeId="battery"/>                      <!-- BAT 0x03 / -->
			<channel-group id="dcdc01" typeId="dcdc">                            <!-- DCDC 0x04 / -->
				<label>DCDC 1</label>
				<description>DCDC 1 Desc</description>
			</channel-group>
			<channel-group id="dcdc02" typeId="dcdc">                            <!-- DCDC 0x04 / -->
				<label>DCDC 2</label>
				<description>DCDC 2 Desc</description>
			</channel-group>
			<channel-group id="powermeter01" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 1</label>
				<description>Power Meter 1 Desc</description>
			</channel-group>
			<channel-group id="powermeter02" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 2</label>
				<description>Power Meter 2 Desc</description>
			</channel-group>
			<channel-group id="powermeter03" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 3</label>
				<description>Power Meter 3 Desc</description>
			</channel-group>
			<channel-group id="powermeter04" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 4</label>
				<description>Power Meter 4 Desc</description>
			</channel-group>
			<channel-group id="powermeter05" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 5</label>
				<description>Power Meter 5 Desc</description>
			</channel-group>
			<channel-group id="powermeter06" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 6</label>
				<description>Power Meter 6 Desc</description>
			</channel-group>
			<channel-group id="powermeter07" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 7</label>
				<description>Power Meter 7 Desc</description>
			</channel-group>
			<channel-group id="powermeter08" typeId="powermeter">				<!-- PM 0x05 / -->
				<label>Power Meter 8</label>
				<description>Power Meter 8 Desc</description>
			</channel-group>
			<!-- <channel-group id="database" typeId="database"/ -->    	    <!-- DB 0x06 / -->
			<!-- <channel-group id="farming" typeId="farming"/> -->             <!-- FMS 0x07 / -->
			<channel-group id="server" typeId="server"/>                        <!-- SRV 0x08 / -->
			<channel-group id="homeAutomation" typeId="homeAutomation"/>        <!-- HA 0x09 / -->
			<channel-group id="information" typeId="information"/>              <!-- INFO 0x0A / -->
			<channel-group id="emergencyPower" typeId="emergencyPower"/>        <!-- EP 0x0B / -->
			<!-- <channel-group id="system" typeId="system"/> -->               <!-- SYS 0x0C / -->
			<channel-group id="update" typeId="update"/>  						<!-- UM 0x0D / -->
			<channel-group id="wallbox01" typeId="wallbox">						<!-- WB 0x0E / -->
				<label>Wallbox 1</label>
				<description>Wallbox 1 Desc</description>
			</channel-group>
			<channel-group id="wallbox02" typeId="wallbox">						<!-- WB 0x0E / -->
