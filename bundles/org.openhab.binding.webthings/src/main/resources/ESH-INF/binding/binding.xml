<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="webthings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:binding="https://openhab.org/schemas/binding/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/binding/v1.0.0 https://openhab.org/schemas/binding-1.0.0.xsd">

	<name>WebThings Binding</name>
	<description>This is the binding for WebThings.</description>
	<author>Sven Schneider</author>

	<!-- https://www.eclipse.org/smarthome/documentation/development/bindings/xml-reference.html -->
	<config-description>
			<parameter name="serverUrl" type="text">
				<default></default>
				<context>url</context>
				<label>Server URL</label>
				<description>URL of WebThing Server</description>
			</parameter>
			<parameter name="token" type="text">
				<default></default>
				<context>password</context>
				<label>Bearer Token</label>
				<description>Token for Authorization</description>
			</parameter>
			<parameter name="backgroundDiscovery" type="boolean">
				<default>true</default>
				<label>Background Discovery</label>
				<description>Run automated background discovery?</description>
				<advanced>true</advanced>
			</parameter>
			<parameter name="reconnectInterval" type="integer">
				<default>2500</default>
				<label>Reconnect Interval</label>
				<description>Time between reconnect attempts after connection loss in ms</description>
				<advanced>true</advanced>
			</parameter>
			<parameter name="reconnectAttempts" type="integer">
				<default>4</default>
				<label>Reconnect Attempts</label>
				<description>Number of reconnect attempts</description>
				<advanced>true</advanced>
			</parameter>
	</config-description>
</binding:binding>
