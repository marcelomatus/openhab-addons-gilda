<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="webthings"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- WebThing Thing -->
	<thing-type id="webthing">
		<label>WebThings WebThing</label>
		<description>OpenHAB representation of an imported WebThing</description>

		<channels>
			<channel id="updateChannel" typeId="updateChannel" />
		</channels>

		<config-description>
			<parameter name="link" type="text" required="true">
				<context>url</context>
				<label>Link of WebThing</label>
				<description>Enter the link to the WebThing</description>
			</parameter>
			<parameter name="security" type="text" required="true">
				<label>SecurityScheme</label>
				<description>Enter the link to the WebThing</description>
				<options>
					<option value="none">None</option>
					<option value="bearer">Bearer</option>
				</options>
			</parameter>
			<parameter name="securityToken" type="text" required="false">
				<default></default>
				<context>password</context>
				<label>Security Token</label>
				<description>Token for Authorization</description>
			</parameter>
			<parameter name="importToken" type="boolean" required="false">
				<default>false</default>
				<label>Import Token</label>
				<description>Import Token from Binding Configuration?</description>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Channels -->
	<channel-type id="updateChannel">
		<item-type>Switch</item-type>
		<label>WebThing Update Channel</label>
		<description>Switch for Updating WebThing properties</description>
	</channel-type>

</thing:thing-descriptions>
