<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ems" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="sample">
		<label>EMS Binding Thing</label>
		<description>Sample thing for EMS Binding</description>

		<channels>
			<channel id="pv-prediction-today" typeId="sample-channel"/>
            <channel id="pv-prediction-today-floating" typeId="sample-channel"/>
            <channel id="pv-prediction-tomorrow" typeId="sample-channel"/>
            <channel id="pv-prediction-2days" typeId="sample-channel"/>
            <channel id="pv-prediction-3days" typeId="sample-channel"/>
            <channel id="pv-prediction-4days" typeId="sample-channel"/>
            <channel id="pv-prediction-5days" typeId="sample-channel"/>
            <channel id="pv-production-today" typeId="sample-channel"/>
            <channel id="pv-production-overhead" typeId="sample-channel"/>
            <channel id="battery-capacity-1" typeId="sample-channel"/>
            <channel id="battery-capacity-2" typeId="sample-channel"/>
            <channel id="battery-capacity-3" typeId="sample-channel"/>
            <channel id="battery-capacity-4" typeId="sample-channel"/>
            <channel id="battery-capacity-uncharged-1" typeId="sample-channel"/>
            <channel id="battery-capacity-uncharged-2" typeId="sample-channel"/>
            <channel id="battery-capacity-uncharged-3" typeId="sample-channel"/>
            <channel id="battery-capacity-uncharged-4" typeId="sample-channel"/>
            <channel id="current-household-consumption" typeId="sample-channel"/>
            <channel id="current-battery-charge" typeId="sample-channel"/>
            <channel id="current-battery-discharge" typeId="sample-channel"/>
		</channels>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>Hostname or IP address of the device</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Passwort to access the device</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="1">
				<label>Refresh Interval</label>
				<description>Interval the device is polled in sec.</description>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="sample-channel">
		<item-type>Number:Temperature</item-type>
		<label>Example Temperature</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Sample channel for EMS Binding</description>
	</channel-type>
</thing:thing-descriptions>
