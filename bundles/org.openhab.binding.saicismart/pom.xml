          <execution>
            <id>generate-dispatcher-header-v1_1</id>
            <goals>
              <goal>java</goal>
            </goals>
            <phase>process-sources</phase>
            <configuration>
              <mainClass>org.bn.compiler.Main</mainClass>
              <arguments>
                <argument>-m</argument>
                <argument>java</argument>
                <argument>-o</argument>
                <argument>${project.basedir}/target/generated-sources/asn1/org/openhab/binding/saicismart/internal/asn1/v1_1</argument>
                <argument>-f</argument>
                <argument>${project.basedir}/src/main/asn1/v1_1/MP_DispatcherHeader.asn1</argument>
