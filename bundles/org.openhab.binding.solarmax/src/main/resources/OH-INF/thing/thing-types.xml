	<channel-type id="LastUpdated">
		<item-type>DateTime</item-type>
		<label>Last Updated</label>
		<description>When was the data last read from the device</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="SoftwareVersion">
		<item-type>Number</item-type>
		<label>Software Version</label>
		<description>Software Version installed on the SolarMax device</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="BuildNumber">
		<item-type>Number</item-type>
		<label>Build Number</label>
		<description>Firmware Build Number installed on the SolarMax device</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="Startups">
		<item-type>Number</item-type>
		<label>Startups</label>
		<description>Number of times the device has started</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="AcPhase1Current">
		<item-type>Number</item-type>
